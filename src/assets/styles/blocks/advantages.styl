.advantages
  margin 10px 0

  &__item
    span(1/3)

  &__img
    display block
    width 50px
    height 50px
    background-repeat no-repeat
    background-size 100% auto
    margin auto

    &_t_star
      background-image url($imgSrc + "/advantages/icon_1.png")

    &_t_card
      background-image url($imgSrc + "/advantages/icon_2.png")

    &_t_armor
      background-image url($imgSrc + "/advantages/icon_3.png")

  &__description
    text-align center
    width 155px
    margin 20px auto
    font-size 13px
    line-height 16px