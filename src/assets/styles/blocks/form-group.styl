.form-group
  position relative
  display inline-block
  width 220px
  height 40px
  font-size 16px
  border 3px solid $grey
  margin-left 20px

  &__wrapper {
    display inline-block
  }

  &:first-child
    margin-left 0

  &__label
    position absolute
    top -27px
    left 15px
    font-size 11px
    word-spacing normal

  &__ctrl
    position relative
    height 100%
    padding 0 10px

    &_t_tel
      padding: 0 10px 0 40px

  &__lang
    position absolute
    left 10px
    top: 50%
    margin-top -6px

    &_t_ru
      background-image url($imgSrc + "/ru.png")
      background-repeat no-repeat
      background-size 100% auto
      width 20px
      height 15px

  &__input
    border none
    height 100%
    width 100%
    vertical-align middle
    font-size 24px
    line-height 33px

    &:focus
      outline none

@media (min-width: 481px) and (max-width:768px)
  .form-group
    &__label
      font-size 18px