.form-group
  position relative
  display inline-block
  width 220px
  height 40px
  font-size 16px
  border 3px solid $grey
  margin-left 20px

  &:first-child
    margin-left 0

  &__label
    position absolute
    top -27px
    left 15px
    font-size 11px
    word-spacing normal

  &__ctrl
    position relative
    height 100%
    padding 0 10px

    &_t_tel
      padding: 0 10px 0 40px

  &__lang
    position absolute
    left 10px
    top: 50%
    margin-top -6px

    &_t_ru
      sprite($s-ru)

  &__input
    border none
    height 100%
    width 100%
    vertical-align middle
    font-size 24px
    line-height 33px

    &:focus
      outline none

