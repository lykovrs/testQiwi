.b-header
  center(1640px, 20px)

  &__logo
    span(1/4)
    padding 30px

  &__auth
    span(3/4)
    padding 50px 0
    text-align right

  &__title
    stack()
    text-align center
    font-size 46px
    padding 35px
    margin-bottom 25px


@media (min-width: 769px) and (max-width:1024px)
  .b-header
    &__logo
      span(1/3)
    &__auth
      span(2/3)


@media (min-width: 481px) and (max-width:768px)
  .b-header
    &__logo, &__auth
      stack()
