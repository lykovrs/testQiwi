.partners
  text-align right

  &__item
    margin-left 5px
    display inline-block
    opacity .5
    width 100px
    height 50px
    background-repeat no-repeat
    background-size 100% auto


    &:hover
      opacity 1

    &_t_pci
      background-image url($imgSrc + "/partners/pci.png")
      width 60px

    &_t_kas
      background-image url($imgSrc + "/partners/kaspersky.png")
      width 78px

    &_t_visa
      background-image url($imgSrc + "/partners/visa.png")
      width 66px

    &_t_msc
      background-image url($imgSrc + "/partners/master-card.png")
      width 68px